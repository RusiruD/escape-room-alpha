<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<Pane fx:id="room" focusTraversable="true" onKeyPressed="#onKeyPressed" onKeyReleased="#onKeyReleased" prefHeight="470.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.RoomController">
   <children>
      <ImageView fitHeight="378.0" fitWidth="494.0" layoutX="58.0" layoutY="64.0">
         <image>
            <Image url="@../images/room.png" />
         </image>
      </ImageView>
      <Label layoutX="30.0" layoutY="24.0" prefHeight="41.0" prefWidth="549.0" text="SOFTENG 206 - ESCAPE ROOM">
         <font>
            <Font name="Arial" size="35.0" />
         </font>
      </Label>
      <Rectangle fx:id="vase" arcHeight="5.0" arcWidth="5.0" fill="#1f93ff" focusTraversable="true" height="41.0" layoutX="340.0" layoutY="193.0" onMouseClicked="#clickVase" opacity="0.0" stroke="BLACK" strokeType="INSIDE" width="38.0" />
      <Rectangle fx:id="window" arcHeight="5.0" arcWidth="5.0" fill="#1f93ff" focusTraversable="true" height="60.0" layoutX="404.0" layoutY="154.0" onMouseClicked="#clickWindow" opacity="0.0" stroke="BLACK" strokeType="INSIDE" width="65.0" />
      <Rectangle fx:id="door" arcHeight="5.0" arcWidth="5.0" fill="#1f93ff" focusTraversable="true" height="98.0" layoutX="137.0" layoutY="205.0" onMouseClicked="#clickDoor" opacity="0.0" stroke="BLACK" strokeType="INSIDE" width="65.0" />
      <Button fx:id="btnStart" layoutX="268.0" layoutY="253.0" mnemonicParsing="false" onAction="#Start" text="Start Game" />
      <Button fx:id="bench" disable="true" layoutX="352.0" layoutY="315.0" mnemonicParsing="false" onAction="#benchClicked" text="bench" visible="false" />
      <Button fx:id="btnGoToSafe" disable="true" layoutX="489.0" layoutY="322.0" mnemonicParsing="false" onAction="#GoToSafe" text="safe" visible="false" />
      <Button fx:id="coatHanger" layoutX="226.0" layoutY="138.0" mnemonicParsing="false" onAction="#coatHangerClicked" opacity="0.0" prefHeight="67.0" prefWidth="85.0" text="Button" />
      <Button fx:id="key" disable="true" layoutX="490.0" layoutY="322.0" mnemonicParsing="false" onAction="#PickUpKey" text="key" visible="false" />
   </children>
</Pane>
